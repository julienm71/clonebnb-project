<div class="banner">
  <div class="banner-content">
    <h1><span id="banner-typed-text"></span></h1>
    <hr style="width:40%;">
    <div class="container">
    <%= simple_form_for places_path, html: { class: 'form-inline' },
      wrapper: :horizontal_form do |f| %>

      <div class="form-inputs">
        <%= f.input :address, required: true, autofocus: true, label: false, placeholder: 'Address..' %>
        <%= f.button :submit, "Search!", class: 'btn btn-primary', id: 'event' %>
      </div>

    <% end %>
    </div>
  </div>
</div>
