<div class="map-layout">
  <div class="cards-container">
    <div class="container-fluid">
      <div class="row" style="margin-top:10px;">
        <% @places.each do |place| %>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="thumbnail" style="height:410px;">
              <div class="thumb-head"  style="background-image: url('<%= cl_image_path place.photo %>'); height:150px; width:100%; background-position: center; background-repeat: no-repeat; background-size:cover;"></div>
              <div class="caption">
                <h3><%= link_to place.name, place_path(place.id) %></h3>
                <p>Price/night: <span style="font-weight: bold;"><%= place.price %>â‚¬</span></p>
                <p>Address: <%= place.address %> </p>
              </div>
                <div style="bottom: 30px; position:absolute;width:93%;">
                  <%= link_to "Book now!", place_path(place.id), class: "btn btn-primary", style: "width:100%;" %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-container hidden-xs">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>
