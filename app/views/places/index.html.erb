<div class="map-layout">
  <div class="cards-container">
    <div class="container-fluid">
      <div class="row" style="margin-top:10px;">
        <% @places.each do |place| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="thumbnail" style="max-height:325px;min-height:325px;">
              <div class="thumb-head"  style="background-image: url('<%= cl_image_path place.photo, height: 300, width: 400, crop: :fill %>'); height:150px; width:100%;"></div>
              <div class="caption">
                <h3><%= link_to place.name, place_path(place.id) %></h3>

                <p>Price per night: <span style="font-weight: bold;"><%= place.price %>â‚¬</span></p>
              </div>
              <div style="bottom: 30px; position:absolute;width:89.5%;">
                <%= link_to "Book now!", place_path(place.id), class: "btn btn-primary", style: "width:100%;" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-container hidden-xs">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>
