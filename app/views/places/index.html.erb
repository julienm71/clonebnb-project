
<div class="map-layout">
  <!-- <h1>My list of places</h1> -->
  <div class="cards-container">
    <div class="container">
      <div class="row">
        <% @places.each do |place| %>
          <div class="col-xs-12 col-sm-6 col-md-4 ">
            <div class="card" style="background-image: url(<%= place.photo %>);">
              <!-- <img src="<%= place.photo %>" style="width:50px; height:50px;"> -->
              <p><%= link_to place.name, place_path(place.id) %></p>
              <!-- <p><%= place.address %></p> -->
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-container hidden-xs">
    <div id="map" class="pending-map"></div>
  </div>
</div>

