<div class="map-layout">
  <div class="cards-container">
    <div class="container-fluid">
      <div class="row" style="margin-top:10px;">
        <% @places.each do |place| %>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="thumbnail" style="height:410px;width:540px;transition: all 0.3s ease-in-out;">
              <div class="thumb-head"  style="background-image: url('<%= cl_image_path place.photo, crop: :fill %>'); height:225px;background-position: center; background-repeat: no-repeat; background-size:cover; position: relative;"></div>
              <div class="caption">
                <p><i class="fa fa-home"></i> <%= link_to place.name, place_path(place.id) %></p>
                <p><i class="far fa-credit-card"></i> Price/night: <span style="font-weight: bold;color:black;"><%= place.price %>â‚¬</span></p>
                <p><i class="fa fa-location-arrow"></i> Address: <span style="font-weight: bold;color:black;"><%= place.address %></span></p>
              </div>
                <div style="bottom: 30px; position:absolute;width:93%;">
                  <%= link_to "Book now!", place_path(place.id), class: "btn btn-primary", style: "width:100%;" %>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-container hidden-xs">
    <div id="map" data-markers="<%= @markers.to_json %>"></div>
  </div>
</div>
